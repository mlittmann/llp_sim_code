sample = $(sample)
bib_option = bib 
Universe = Vanilla
+SingularityImage = "/cvmfs/unpacked.cern.ch/gitlab-registry.cern.ch/muon-collider/mucoll-deploy/mucoll:2.9-alma9"
Requirements = ( HAS_SINGULARITY ) && ( HAS_CVMFS_unpacked_cern_ch )
should_transfer_files = YES
Output  = outputs/output.out.$(Cluster)-$(Process)
Log     = outputs/log.$(Cluster)
Error   = outputs/error.out.$(Cluster)-$(Process)
transfer_input_files = /ospool/uc-shared/project/futurecolliders/miralittmann/test/$(sample)_digi$(Step).slcio, /scratch/miralittmann/sim_code/mucoll-benchmarks/reconstruction/old-reco_steer.py, /scratch/larsonma/tutorial2024/LLPStudies/MyBIBUtils/build/lib/libMyBIBUtils.so
transfer_output_files = $(sample)_reco$(Step).slcio
transfer_output_remaps = "$(sample)_reco$(Step).slcio = /ospool/uc-shared/project/futurecolliders/miralittmann/test/$(sample)_reco$(Step).slcio"
when_to_transfer_output = ON_EXIT
request_cpus = 1
request_disk = 4 GB
request_memory = 8 GB
+ProjectName="collab.futurecolliders"
Executable = /scratch/miralittmann/sim_code/reco/old-reco.sh
Arguments = --inputFile $(sample) --chunks 10 --nEvents 10 --pId $(Step)
Queue 10 sample from ( 
    1000_10
)
